<% provide :title, t("notifications.notification") %>

<div class="row user-notification">
  <div class="col-md-12">
    <h3><strong><%= t "notifications.notification" %></strong></h3>
    <table class="table table-hover notification-table">
      <% @user_notifications.each do |user_notification| %>
        <%= render "user_notification", notification: user_notification.notification %>
      <% end %>
    </table>
    <div class="pull-right">
      <%= paginate @user_notifications, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
